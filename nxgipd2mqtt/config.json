{
  "name": "nxgipd2mqtt",
  "version": "0.1.0",
  "slug": "nxgipd2mqtt",
  "description": "Nxgipd to MQTT Bridge",
  "auto_uart": true,
  "url": "https://github.com/orgjvr/hassio-nxgipd2mqtt",
  "startup": "before",
  "arch": [
    "aarch64",
    "amd64",
    "armv7",
    "armhf",
    "i386"
  ],
  "boot": "auto",
  "map": [
    "share:rw",
    "config:rw", 
    "ssl:rw"
  ],
  "ports": {
    "8486/tcp": 8486
  },
  "ports_description": {
    "8485/tcp": "Socat tcp-listen port"
  },
  "options": {
    "nxgipd":{
      "SerialDevice": "/dev/serial/by-id/usb-Silicon_Labs_CP2102_USB_to_UART_Bridge_Controller_0001-if00-port0",
      "SerialBaud": 9600,
      "SerialProtocol": "ascii",
      "NumPartitions": 1,
      "NumZones": 30,
      "StatusCheckMinutes": 30,
      "TimeSyncHours": 168,
      "SysLogLevel": 2,
      "LogFileLevel": 0,
      "LogEntry": 2,
      "PartitionStatus": 1,
      "ZoneStatus": 1,
      "MaxProcesses": 0,
      "DataPath": "/share/nxgipd2mqtt",
      "LogFilename": "nxgipd.log",
      "StatusFilename": "alarmstatus.xml",
      "StatusSaveInterval": 1440,
      "AlarmProgram": "/nxgipd/alarm-mqtt.sh"
    },
    "AlarmProg":{
      "MqttHost": "mqtthost",
      "MqttPort": 1883,
      "MqttUser": "nxgipd",
      "MqttPassword": "password",
      "MqttBaseTopic": "nx584",
      "MqttSSL": false
    },
    "socat": {
      "enabled": false,
      "serverIP": "192.168.10.22",
      "serverPort": 9000,
      "restartDelay": 1,
      "initialDelay": 1,
      "options": "-d -d",
      "log": false
    }
  },
  "schema": {
    "nxgipd":{
      "SerialDevice": "str",
      "SerialBaud": "int",
      "SerialProtocol": "str",
      "NumPartitions": "int",
      "NumZones": "int",
      "StatusCheckMinutes": "int",
      "TimeSyncHours": "int",
      "SysLogLevel": "int",
      "LogFileLevel": "int",
      "LogEntry": "int",
      "PartitionStatus": "int",
      "ZoneStatus": "int",
      "MaxProcesses": "int",
      "DataPath": "str",
      "LogFilename": "str",
      "StatusFilename": "str",
      "StatusSaveInterval": "int",
      "AlarmProgram": "str"
    },
    "AlarmProg":{
      "MqttHost": "str",
      "MqttPort": "int",
      "MqttUser": "str",
      "MqttPassword": "str",
      "MqttBaseTopic": "str",
      "MqttSSL": "bool"
    },
    "socat": {
      "enabled": "bool?",
      "serverIP": "str",
      "serverPort": "int",
      "restartDelay": "float(0,)?",
      "initialDelay": "float(0,)?",
      "options": "str?",
      "log": "bool?"
    }
  },
  "wimage": "orgjvr/nxgipd2mqtt-{arch}"
}
